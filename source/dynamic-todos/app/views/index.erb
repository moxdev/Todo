<div id="container">
  <h1>The To Do List</h1>

  <div id="todo">
  <div class="toolbox">
    <form action="/add_todo" method="post">
      <input id="todo_content" type="text" name="todo_content" value="Put your todo item here!"/>
      <input id="addTodo" type="submit" value="Add Todo"/>
      <!-- <button class="add" type="submit">Add Todo</button> -->
    </form>
  </div>

  <div class="todo_list">
    <ul>
    <% @todos.each do |todo| %>
      <li data-id="<%= todo.id %>">
        <input class="complete_todo" type="checkbox" name="completed"
        <%= todo.completed ? 'checked="checked"' : ' ' %> />
        <span class="todo_content"><%= todo.todo_content %></span>
        <button class="delete_todo" type="button">delete</button>
      </li>
    <% end %>
    </ul>
  </div>

  <div id="todo_template" style="display: none;">
    <div class="todo">
      <h2>Todo Name</h2>
      <ul>
        <li><a href="#" class="delete">Delete</a></li>
        <li><a href="#" class="complete">Complete</a></li>
      </ul>
    </div>
  </div>
</div>
</div>